<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Scripts.Render("~/bundles/jquery")
        @Styles.Render("~/Content/css")
        @RenderSection("imports", required: false)
        @Styles.Render("~/Content/Base.css")
        @Scripts.Render("~/bundles/modernizr")
        <script type="text/javascript">jQuery(function ($) {@RenderSection("js", required: false) });</script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">
                        <a href="@Url.Action("Index", "Default")">
                            <img src="@Url.Content("~/Images/logo_pie.png")" />
                        </a>
                    </p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Overview", "Index", "Default")</li>
                            <li>@Html.ActionLink("Editor", "Editor", "Default")</li>
                            <li>@Html.ActionLink("Viewer", "Viewer", "Default")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("header", required: false)
            <section class="content-wrapper main-content clear-fix">
                <div class="message message-@ViewBag.MessageType">@ViewBag.StatusMessage</div>
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Slice of Pie</p>
                </div>
            </div>
        </footer>
        @RenderSection("scripts", required: false)
    </body>
</html>
